<mujoco>
  <compiler angle="radian"/>

  <asset>
    <mesh name="servo_mesh" file="mesh/servo.STL" scale="0.001 0.001 0.001"/>
    <mesh name="leg_mesh" file="mesh/leg.STL" scale="0.001 0.001 0.001"/>
    <texture type="skybox" builtin="gradient" rgb1="1 1 1" rgb2=".6 .8 1" width="256" height="256" />
    <texture name="texplane" type="2d" builtin="checker" rgb1=".2 .3 .4" rgb2=".1 0.15 0.2" width="512" height="512"/>
    <material name="matplane" texture="texplane" texrepeat="1 1" texuniform="true" />
  </asset>

  <worldbody>
    <light directional="true" diffuse=".4 .4 .4" specular="0.1 0.1 0.1" pos="0 0 3" dir="0 0 -1" />
    <geom name="ground" type="plane" size="0 0 1" pos="0 0 0" quat="1 0 0 0" material="matplane" condim="1" />

    <body name="servo_body" pos="0 0 0.2">
      <!-- <freejoint/> -->
      <inertial pos="0.01484 0.009499 -0.022164" mass="0.057365" fullinertia="1.255e-5 1.494e-5 8.128e-6 -4.41e-10 1.372e-7 -7.8e-11" />
      <geom type="mesh" mesh="servo_mesh" rgba="1 1 1 1"/>

      <body name="leg_body" pos="0.034 0.0095 -0.035">
        <inertial pos="-0.019046 0 -0.03538" mass="0.157203" fullinertia="8.7386e-5 1.185e-4 3.968e-5 2.2e-11 2.558e-7 6.9e-11"/>
        <joint name="leg_joint" type="hinge" axis="1 0 0" range="-1.57 1.57" damping="0.1"/>
        <geom type="mesh" mesh="leg_mesh" pos="-0.034 -0.0095 0.035" rgba="0.5 0.5 0.5 1"/>
      </body>
      
    </body>
  </worldbody>

  <contact>
    <exclude name="e0" body1="servo_body" body2="leg_body" />
  </contact>

  <actuator>
    <position name="leg_servo" joint="leg_joint"/>
  </actuator>

</mujoco>
