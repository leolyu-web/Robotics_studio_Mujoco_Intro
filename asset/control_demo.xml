<mujoco model="three_bars">
  <compiler angle="radian" />

  <option timestep="0.01" />

  <asset>
    <material name="red_mat" rgba="1 0.2 0.2 1"/>
    <material name="green_mat" rgba="0.2 1 0.2 1"/>
    <material name="blue_mat" rgba="0.2 0.2 1 1"/>
  </asset>

  <worldbody>
    <light pos="0 0 3" />

    <body name="pole1" pos="-1.5 0 0.6">
      <joint name="pole_joint1" type="hinge" axis="0 1 0" limited="false" />
      <geom type="capsule" fromto="0 0 -0.5 0 0 0.5" size="0.04" material="red_mat"/>
    </body>

    <body name="pole2" pos="0 0 0.6">
      <joint name="pole_joint2" type="hinge" axis="0 1 0" limited="false" />
      <geom type="capsule" fromto="0 0 -0.5 0 0 0.5" size="0.04" material="green_mat"/>
    </body>

    <body name="pole3" pos="1.5 0 0.6">
      <joint name="pole_joint3" type="hinge" axis="0 1 0" limited="false" />
      <geom type="capsule" fromto="0 0 -0.5 0 0 0.5" size="0.04" material="blue_mat"/>
    </body>

  </worldbody>

  <actuator>
    <motor name="torque_actuator" joint="pole_joint1" gear="5" />

    <position name="position_actuator" joint="pole_joint2" kp="1000" kv="10" />

    <velocity name="velocity_actuator" joint="pole_joint3" kv="10" />
  </actuator>

</mujoco>